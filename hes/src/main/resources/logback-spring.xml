<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- DLMS Tx/Rx logger writing to a separate file (per meter serial) -->
    <appender name="DLMS_APPENDER" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <key>meter</key>
            <defaultValue>general</defaultValue>
        </discriminator>
        <sift>
            <appender name="METER_FILE_APPENDER" class="ch.qos.logback.core.FileAppender">
                <file>logs/${meter}-dlms-txrx.log</file>
                <encoder>
                    <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %msg%n</pattern>
                </encoder>
            </appender>
        </sift>
    </appender>

    <!-- Route DLMS frames into the separate TX/RX log -->
    <logger name="DLMS-TXRX" level="INFO" additivity="false">
        <appender-ref ref="DLMS_APPENDER"/>
    </logger>

    <!-- Console appender for normal application log -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger - needed to keep the app alive and output standard logs -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>